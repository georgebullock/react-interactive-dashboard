{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"module": "commonjs",
		"types": ["node"],
		"allowJs": true,
		"rootDir": "./src",
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true
	}
}
